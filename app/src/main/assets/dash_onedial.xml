<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sensorview="http://schemas.android.com/apk/res-auto"
    xmlns:dialview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="horizontal"
    tools:context=".dashboards.DashFragment">

    <org.spoofer.cockpit.views.sensorviews.SensorViewGroup android:id="@+id/meter_values"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_weight="1" sensorview:sensorName="gps_speed"
        sensorview:valueRef_0="@id/meter0">


        <org.spoofer.cockpit.views.Dialview android:id="@+id/dial1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" android:layout_weight="1"
            dialview:needleImage="@drawable/needle" dialview:needlePivotY="0.775"
            dialview:needleOffset="-180" dialview:endDegree="180" />

    </org.spoofer.cockpit.views.sensorviews.SensorViewGroup>


</LinearLayout>