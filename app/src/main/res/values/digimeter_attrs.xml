<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DigiMeter">
        <attr name="sensorName" />
        <attr name="valueIndex" />

        <attr name="level" />
        <attr name="minHeight" />
        <attr name="minWidth" />

        <attr name="orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>

        <attr name="zeroOffset" format="integer" />
        <attr name="showLimits" format="boolean" />
        <attr name="invertAxes" format="boolean" />
        <attr name="segmentCount" format="integer" />
        <attr name="colour" format="color" />
        <attr name="colourNegative" format="color" />
    </declare-styleable>
</resources>